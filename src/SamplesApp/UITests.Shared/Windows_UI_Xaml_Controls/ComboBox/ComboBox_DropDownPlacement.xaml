<Page
    x:Class="UITests.Shared.Windows_UI_Xaml_Controls.ComboBox.ComboBox_DropDownPlacement"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:local="using:UITests.Shared.Windows_UI_Xaml_Controls.ComboBox"
	xmlns:not_win="using:Uno.UI.Xaml.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d not_win"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid BorderBrush="DarkRed" BorderThickness="2,50,2,100">
		<Grid.ColumnDefinitions>
			<ColumnDefinition />
			<ColumnDefinition />
			<ColumnDefinition />
			<ColumnDefinition />
		</Grid.ColumnDefinitions>

		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition />
			<RowDefinition />
			<RowDefinition />
			<RowDefinition />
		</Grid.RowDefinitions>

		<TextBlock Grid.Column="0" Text="Above" />
		<TextBlock Grid.Column="1" Text="Center" />
		<TextBlock Grid.Column="2" Text="Below" />
		<TextBlock Grid.Column="3" Text="Auto" />

		<ComboBox
			x:Name="NoSelectionPreferAbove"
			Grid.Row="1"
			Grid.Column="0"
			VerticalAlignment="Center"
			ItemsSource="12345"
			SelectedIndex="-1"
			not_win:ComboBox.DropDownPreferredPlacement="Above" />

		<ComboBox
			x:Name="NoSelectionPreferCentered"
			Grid.Row="1"
			Grid.Column="1"
			VerticalAlignment="Center"
			ItemsSource="12345"
			SelectedIndex="-1"
			not_win:ComboBox.DropDownPreferredPlacement="Centered" />

		<ComboBox
			x:Name="NoSelectionPreferBelow"
			Grid.Row="1"
			Grid.Column="2"
			VerticalAlignment="Center"
			ItemsSource="12345"
			SelectedIndex="-1"
			not_win:ComboBox.DropDownPreferredPlacement="Below" />

		<ComboBox
			x:Name="NoSelectionPreferAuto"
			Grid.Row="1"
			Grid.Column="3"
			VerticalAlignment="Center"
			ItemsSource="12345"
			SelectedIndex="-1"
			not_win:ComboBox.DropDownPreferredPlacement="Auto" />




		<ComboBox
			x:Name="FirstSelectedPreferAbove"
			Grid.Row="2"
			Grid.Column="0"
			VerticalAlignment="Center"
			ItemsSource="12345"
			SelectedIndex="0"
			not_win:ComboBox.DropDownPreferredPlacement="Above" />

		<ComboBox
			x:Name="FirstSelectedPreferCentered"
			Grid.Row="2"
			Grid.Column="1"
			VerticalAlignment="Center"
			ItemsSource="12345"
			SelectedIndex="0"
			not_win:ComboBox.DropDownPreferredPlacement="Centered" />

		<ComboBox
			x:Name="FirstSelectedPreferBelow"
			Grid.Row="2"
			Grid.Column="2"
			VerticalAlignment="Center"
			ItemsSource="12345"
			SelectedIndex="0"
			not_win:ComboBox.DropDownPreferredPlacement="Below" />

		<ComboBox
			x:Name="FirstSelectedPreferAuto"
			Grid.Row="2"
			Grid.Column="3"
			VerticalAlignment="Center"
			ItemsSource="12345"
			SelectedIndex="0"
			not_win:ComboBox.DropDownPreferredPlacement="Auto" />




		<ComboBox
			x:Name="MiddleSelectedPreferAbove"
			Grid.Row="3"
			Grid.Column="0"
			VerticalAlignment="Center"
			ItemsSource="12345"
			SelectedIndex="2"
			not_win:ComboBox.DropDownPreferredPlacement="Above" />

		<ComboBox
			x:Name="MiddleSelectedPreferCentered"
			Grid.Row="3"
			Grid.Column="1"
			VerticalAlignment="Center"
			ItemsSource="12345"
			SelectedIndex="2"
			not_win:ComboBox.DropDownPreferredPlacement="Centered" />

		<ComboBox
			x:Name="MiddleSelectedPreferBelow"
			Grid.Row="3"
			Grid.Column="2"
			VerticalAlignment="Center"
			ItemsSource="12345"
			SelectedIndex="2"
			not_win:ComboBox.DropDownPreferredPlacement="Below" />

		<ComboBox
			x:Name="MiddleSelectedPreferAuto"
			Grid.Row="3"
			Grid.Column="3"
			VerticalAlignment="Center"
			ItemsSource="12345"
			SelectedIndex="2"
			not_win:ComboBox.DropDownPreferredPlacement="Auto" />




		<ComboBox
			x:Name="LastSelectedPreferAbove"
			Grid.Row="4"
			Grid.Column="0"
			VerticalAlignment="Center"
			ItemsSource="12345"
			SelectedIndex="4"
			not_win:ComboBox.DropDownPreferredPlacement="Above" />

		<ComboBox
			x:Name="LastSelectedPreferCentered"
			Grid.Row="4"
			Grid.Column="1"
			VerticalAlignment="Center"
			ItemsSource="12345"
			SelectedIndex="4"
			not_win:ComboBox.DropDownPreferredPlacement="Centered" />

		<ComboBox
			x:Name="LastSelectedPreferBelow"
			Grid.Row="4"
			Grid.Column="2"
			VerticalAlignment="Center"
			ItemsSource="12345"
			SelectedIndex="4"
			not_win:ComboBox.DropDownPreferredPlacement="Below" />

		<ComboBox
			x:Name="LastSelectedPreferAuto"
			Grid.Row="4"
			Grid.Column="3"
			VerticalAlignment="Center"
			ItemsSource="12345"
			SelectedIndex="4"
			not_win:ComboBox.DropDownPreferredPlacement="Auto" />
	</Grid>
</Page>
